<databaseChangeLog objectQuotingStrategy="QUOTE_ALL_OBJECTS" logicalFilePath="org.everit.osgi.authentication.simple" xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

	<include file="eosgi:org.everit.osgi.resource" />

	<changeSet id="1.0.0" author="everit">

		<createTable tableName="authc_simple_subject">
			<column name="simple_subject_id" type="bigint" autoIncrement="true">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="principal" type="java.sql.Types.VARCHAR(255)">
				<constraints unique="true" nullable="false" />
			</column>
			<column name="credential" type="java.sql.Types.VARCHAR(255)">
				<constraints nullable="false" />
			</column>
			<column name="active" type="BOOLEAN">
				<constraints nullable="false" />
			</column>
			<column name="resource_id" type="bigint">
				<constraints nullable="false" />
			</column>
		</createTable>

		<addForeignKeyConstraint constraintName="fk_simple_subject_resource"
			baseTableName="authc_simple_subject" baseColumnNames="resource_id" referencedTableName="res_resource"
			referencedColumnNames="resource_id" />

	</changeSet>

</databaseChangeLog>

